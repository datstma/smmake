        <Component Id="PathComponent" Guid="{df95663b-adbf-4625-ab9e-e5f1a3130b83}">
          <Environment Id="PATH"
                      Name="PATH"
                      Value="[INSTALLFOLDER]"
                      Permanent="no"
                      Part="last"
                      Action="set"
                      System="no" />
        </Component>
      </Directory>
    </StandardDirectory>

    <Feature Id="Main">
      <ComponentRef Id="MainExeComponent" />
      <ComponentRef Id="PathComponent" />
    </Feature>

  </Package>
</Wix>